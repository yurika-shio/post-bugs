<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>

			<% if @user.id == current_user.id %>
			<%= link_to "編集", edit_user_path, class: "btn btn-default sideby" %>
			<% end %>
		</div>
		<div class="col-xs-3">
			<h2>User index</h2>
			<% if @user.id == current_user.id %>
			<%= link_to "＋", new_article_path, class: "btn btn-default sideby" %>
			<% end %>

			<div class="row">
				<table class="table table-hover">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<% @user.articles.each do |article| %>
					<tbody>
						<tr>
							<td><%= link_to article.title, article, class: "article_#{article.id}" %></td>
							<td><%= link_to "Destroy",article, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_article_#{article.id}" %></td>
							<td>
								<% if article.is_completed == true %>
									投稿済み
								<% else %>
									一時保存中
								<% end %>
							</td>
							<td></td>
							<td></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>
